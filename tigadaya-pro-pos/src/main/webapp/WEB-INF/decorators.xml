<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/WEB-INF/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/resources/*</pattern>
		<pattern>/category/*</pattern>
		<pattern>/adjustment/*</pattern>
		<pattern>/supplier/*</pattern>
		<pattern>/po/*</pattern>
		<pattern>/item/create</pattern>
		<pattern>/item/variant</pattern>
		<pattern>/item/edit</pattern>
		<pattern>/resources/*</pattern>
		<pattern>/outlet/*</pattern>
		<pattern>/ts/*</pattern>
		<pattern>/supplier/*</pattern>
	</excludes>

	<decorator name="main" page="main.jsp">
		<pattern>/*</pattern>
	</decorator>

	<decorator name="home" page="home.jsp">
		<pattern>/home.html</pattern>
	</decorator>

	<decorator name="login" page="login.jsp">
		<pattern>/login.jsp</pattern>
		<pattern>/login.html</pattern>
	</decorator>
</decorators>